default: &default
  adapter: sqlite3
  pool: 5
  timeout: 5000

development:
  <<: *default
  database: db/development.sqlite3

test:
  <<: *default
  database: db/test.sqlite3

production:
  adapter: postgres
  encoding: unicode
  pool: 5
  host: <%= ENV['DB_HOST'] || 'db' %>
  database: <%= ENV['DB_NAME'] || 'airgo' %>
  username: <%= ENV['DB_USER'] || 'airgo' %>
  password: <%= ENV['DB_PASSWORD'] || 'airgo' %>
